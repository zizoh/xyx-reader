<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/list_item_card_horizontal_padding"
            android:paddingTop="@dimen/list_item_card_vertical_padding"
            android:paddingRight="@dimen/list_item_card_horizontal_padding"
            android:paddingBottom="@dimen/list_item_card_vertical_padding"
            android:textColor="@color/white"
            tools:text="@string/sample_article_title" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/list_item_card_horizontal_padding"
            android:paddingRight="@dimen/list_item_card_horizontal_padding"
            android:paddingBottom="@dimen/list_item_card_padding"
            android:textColor="@color/white"
            tools:text="@string/sample_article_subtitle" />

        <TextView
            android:id="@+id/article_author"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/list_item_card_horizontal_padding"
            android:paddingRight="@dimen/list_item_card_horizontal_padding"
            android:paddingBottom="@dimen/list_item_card_vertical_padding"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.v7.widget.CardView>
